<?xml version="1.0"?>
<skin name="bubble_skin" version="0.0">

	<!-- shared variables -->
	
	<variables>
		<variable key="asset" value="habbo_skin_ubuntu_png" type="String" />
	</variables>
	
	<!-- the following maps layouts for render states -->

	<states>
		<state name="default" layout="bubble" template="default_bubble" />
	</states>

	<!-- templates defines regions in bitmap asset -->
	
	<templates>
		<template name="default_bubble" asset="$asset">
			<entities>
				<entity name="top_left"     type="bitmap"><region><Rectangle x="10" y="190" width="5" height="5" /></region></entity>
				<entity name="mid_left"     type="bitmap"><region><Rectangle x="10" y="195" width="5" height="1" /></region></entity>
				<entity name="btm_left"     type="bitmap"><region><Rectangle x="10" y="206" width="5" height="6" /></region></entity>
				<entity name="top_center"   type="bitmap"><region><Rectangle x="15" y="190" width="1" height="5" /></region></entity>
				<entity name="mid_center"   type="bitmap"><region><Rectangle x="15" y="195" width="1" height="1" /></region></entity>
				<entity name="btm_center"   type="bitmap"><region><Rectangle x="15" y="206" width="1" height="6" /></region></entity>
				<entity name="top_right"    type="bitmap"><region><Rectangle x="30" y="190" width="5" height="5" /></region></entity>
				<entity name="mid_right"    type="bitmap"><region><Rectangle x="30" y="195" width="5" height="1" /></region></entity>
				<entity name="btm_right"    type="bitmap"><region><Rectangle x="30" y="206" width="5" height="6" /></region></entity>
                <entity name="spacer"       type="null"><region><Rectangle x="0" y="" width="1" height="1" /></region></entity>
			</entities>
		</template>
	</templates>
	
	<!-- markup for layout drawer -->
	
	<layouts>
		<layout name="bubble" transparent="true">
			<entities>
				<entity name="top_left" id="0"><region><Rectangle x="6" y="6" width="5" height="5" /></region><scale horizontal="fixed" vertical="fixed" /></entity>
				<entity name="mid_left" id="0"><region><Rectangle x="6" y="11" width="5" height="15" /></region><scale horizontal="fixed" vertical="strech" /></entity>
				<entity name="btm_left" id="0"><region><Rectangle x="6" y="26" width="5" height="6" /></region><scale horizontal="fixed" vertical="move" /></entity>

				<entity name="top_center" id="1"><region><Rectangle x="11"  y="6" width="5" height="5" /></region><scale horizontal="strech" vertical="fixed" /></entity>
				<entity name="mid_center" id="1"><region><Rectangle x="11"  y="11" width="5" height="15" /></region><scale horizontal="strech" vertical="strech" /></entity>
				<entity name="btm_center" id="1"><region><Rectangle x="11"  y="26" width="5" height="6" /></region><scale horizontal="strech" vertical="move" /></entity>

				<entity name="top_right" id="2"><region><Rectangle x="16" y="6" width="5" height="5" /></region><scale horizontal="move" vertical="fixed" /></entity>
				<entity name="mid_right" id="2"><region><Rectangle x="16" y="11" width="5" height="15" /></region><scale horizontal="move" vertical="strech" /></entity>
				<entity name="btm_right" id="2"><region><Rectangle x="16" y="26" width="5" height="6" /></region><scale horizontal="move" vertical="move" /></entity>

                <entity name="spacer" id="3"><region><Rectangle x="26" y="37" width="1" height="1" /></region><scale horizontal="move" vertical="move" /></entity>
			</entities>
		</layout>
	</layouts>
</skin>